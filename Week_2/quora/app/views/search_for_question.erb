
<% if @question == nil %>
  <p>Sorry, there does not exist a question with that id.</p>
<% else %>
  <% question = @question %>
  <div class="question">
    <%= erb :_question, locals: {question: question}, layout: false %>
  </div>

  <% question.answers.each_with_index do |ans, index| %>
    <div class="answer">
      <%= erb :_answer, locals: {ans: ans, index: (index + 1)}, layout: false %>
    </div>
  <% end %>
<% end %>


<div class="new_find">
  <%= erb :_new_find, layout: false %>
</div>
