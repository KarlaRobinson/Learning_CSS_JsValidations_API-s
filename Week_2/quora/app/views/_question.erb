<fieldset >
  <legend>Question #<%= question.id %></legend>
  <p><%= question.text %></p>
  <p id="vq<%= question.id %>">[<%= question.votes.length %> votes]</p>
  <p>[<%= question.answers.length %> answers]</p>
    <form id="q<%= question.id %>" class="form_q" action="/vote/question" method="post">
      <input type="hidden" name="id" value="<%= question.id %>">
      <input type="submit" value="UpVote">
    </form>
    <form action='/answer' method="post">
      <textarea type="text" placeholder="answer" name="text"></textarea>
      <input type="hidden" name="question_id" value="<%= question.id %>">
      <input type="submit" value="AddAnswer">
    </form>
</fieldset>

