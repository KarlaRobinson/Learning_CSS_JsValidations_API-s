  
<% if current_user != nil %>
  <form class="profile_nav" action="/users/<%=current_user.id%>" method="get">
  <input type="submit" value="MyProfile">
  </form>

  <form class="profile_nav" action='/questions/user/id:' method="get">
    <input type="submit" value="MyQuestions">
  </form>

  <form class="profile_nav" action='/answers/user/:id' method="get">
    <input type="submit" value="MyAnswers">
  </form>

  <form class="profile_nav" action='/all/users' method="get">
    <input type="submit" value="AllUsers">
  </form>

  <form class="profile_nav" action='/questions/all' method="get">
    <input type="submit" value="AllQuestions">
  </form>

  <form class="profile_nav" action="/sign_out" method="post">
    <input type="submit" value="SignOut">
  </form>

  <form class="profile_nav" action="/delete/users/<%=current_user.id%>" method="post">
    <input type="submit" value="Delete">
  </form>
<% else %>
    <form  class="profile_nav" action="/login" method="post">
    <input type="text" placeholder="email" name="email">
    <input type="password" placeholder="password" name="password">
    <input type="submit" value="Sign in!">
  </form>
<% end %>