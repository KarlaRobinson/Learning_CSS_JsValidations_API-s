 <h1><%=@user.name%></h1>
<h4>Email: <%=@user.email%></h4>


 <fieldset>
  <legend>Edit your information</legend>
  <form  id="edit" action="/edit/users/<%=@user.id%>" method="post">
    <p>You must enter your current password to change any information:</p>
    <input type="password" placeholder="current password" name="pass1">
    <br>
    <input type="text" placeholder="name" name="name">
    <input type="text" placeholder="email" name="email">
    <input type="text" placeholder="new password" name="pass2">
    <input type="submit" value="Edit">
  </form>
</fieldset>



  <h3>Your pictures:</h3>
  <p>Drag to reorder. Click to view in full screen.</p> 
  <ul id="sortable" >
    <% @albums.each do |albums| %>
      <% albums.photos.each do |photo| %>
            <li>
              <img src="<%= photo.photo_url(:thumb) %>" class="many">
              <img src="<%= photo.photo_url(:large) %>" class="hidden">
            </li>
      <% end %>
    <% end %>
  </ul>