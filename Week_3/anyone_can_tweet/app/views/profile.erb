
<h3><span>You are logged in as: @<%= current_user.name %></span></h3>


  <% if !@user %>
  <% @user = twitter_user %>
  <% end %>


<ul>
  <% twitter_user.user_timeline(@user).each do |tweet|%>
    <li><span><%= tweet.created_at.to_s.slice(0,16) %></span>  <%=  tweet.text %></li>
  <% end %>
</ul>

